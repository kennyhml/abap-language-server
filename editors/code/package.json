{
  "name": "abap",
  "displayName": "ABAP",
  "description": "ABAP Development in VSC",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension/index.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "iconThemes": [
      {
        "id": "abap",
        "label": "ABAP",
        "path": "./media/abap-icon-theme.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "abap.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "abap.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "verbose",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "languages": [
      {
        "id": "abap",
        "extensions": [
          ".abap"
        ]
      }
    ],
    "commands": [
      {
        "command": "abap.openAddConnectionScreen",
        "title": "Add new System Connection",
        "icon": {
          "dark": "webviews/assets/addConnection.svg",
          "light": "webviews/assets/addConnection.svg"
        }
      },
      {
        "command": "abap.refreshConnections",
        "title": "Refresh Landscape Connections",
        "icon": {
          "dark": "webviews/assets/refresh.svg",
          "light": "webviews/assets/refresh.svg"
        }
      },
      {
        "command": "abap.connectToSystem",
        "title": "Connect to system",
        "icon": {
          "dark": "webviews/assets/connect.svg",
          "light": "webviews/assets/connect.svg"
        }
      },
      {
        "command": "abap.disconnectFromSystem",
        "title": "Disconnect from system",
        "icon": {
          "dark": "webviews/assets/disconnect.svg",
          "light": "webviews/assets/disconnect.svg"
        }
      },
      {
        "command": "abap.disconnectAllSystems",
        "title": "Disconnect from all system",
        "icon": {
          "dark": "webviews/assets/disconnectAll.svg",
          "light": "webviews/assets/disconnectAll.svg"
        }
      },
      {
        "command": "abap.editSystemConnection",
        "title": "Edit Connection",
        "shortTitle": "Short",
        "icon": {
          "dark": "webviews/assets/edit.svg",
          "light": "webviews/assets/edit.svg"
        }
      },
      {
        "command": "abap.deleteSystemConnection",
        "title": "Delete System",
        "shortTitle": "Short"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "abap.deleteSystemConnection",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "abap.refreshConnections",
          "when": "view == systems",
          "group": "navigation@1"
        },
        {
          "command": "abap.openAddConnectionScreen",
          "when": "view == systems",
          "group": "navigation@2"
        },
        {
          "command": "abap.disconnectAllSystems",
          "when": "view == systems",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "abap.connectToSystem",
          "when": "viewItem == disconnected",
          "group": "inline@2"
        },
        {
          "command": "abap.disconnectFromSystem",
          "when": "viewItem == connected",
          "group": "inline@2"
        },
        {
          "command": "abap.editSystemConnection",
          "when": "viewItem == disconnected",
          "group": "1_modification"
        },
        {
          "command": "abap.editSystemConnection",
          "when": "viewItem == disconnected",
          "group": "inline@1"
        },
        {
          "command": "abap.deleteSystemConnection",
          "when": "viewItem == disconnected",
          "group": "1_modification@1"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "adt",
          "title": "ABAP Development Tools",
          "icon": "media/adt.png"
        },
        {
          "id": "transports",
          "title": "Transport Organizer",
          "icon": "media/transport.png"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "systems",
        "contents": "No connections yet.\n[Add New Connection](command:abap.openAddConnectionScreen)"
      }
    ],
    "views": {
      "adt": [
        {
          "id": "systems",
          "name": "System Connections",
          "icon": "media/adt.png",
          "type": "tree"
        },
        {
          "id": "test",
          "name": "Test",
          "icon": "media/adt.png",
          "type": "tree"
        }
      ],
      "transports": [
        {
          "id": "transports",
          "name": "Open Transports",
          "icon": "media/transport.png",
          "type": "tree"
        }
      ]
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "vscode:prepublish": "npm run compile",
    "watch": "tsc -watch -p ./ --diagnostics",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.13",
    "@vscode/codicons": "^0.0.40",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "bits-ui": "^2.11.4",
    "svelte": "^5.0.3",
    "svelte-check": "^4.0.5",
    "tailwindcss": "^4.1.13",
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tomjs/vite-plugin-vscode": "^5.0.0",
    "@tsconfig/svelte": "^5.0.4",
    "@types/node": "^24.5.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/vscode": "^1.93.0",
    "@types/vscode-webview": "^1.57.5",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "tailwindcss-animate": "^1.0.7"
  }
}