// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Extension (Debug)",
			"type": "npm",
			"script": "dev",
			"problemMatcher": {
				"owner": "typescript",
				"fileLocation": "relative",
				"pattern": {
					"regexp": "^([a-zA-Z]\\:/?([\\w\\-]/?)+\\.\\w+):(\\d+):(\\d+): (ERROR|WARNING)\\: (.*)$",
					"file": 1,
					"line": 3,
					"column": 4,
					"code": 5,
					"message": 6
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*extension build start*$",
					"endsPattern": "^.*extension (build|rebuild) success.*$"
				}
			},
			"isBackground": true,
			"path": "editors/code/",
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Build Extension (Release)",
			"type": "npm",
			"script": "build",
			"path": "editors/code/",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Build Server (Debug)",
			"group": "build",
			"type": "shell",
			"command": "cargo build --package abap-lsp",
			"problemMatcher": "$rustc"
		},
		{
			"label": "Build Server (Release)",
			"group": "build",
			"type": "shell",
			"command": "cargo build --release --package abap-lsp",
			"problemMatcher": "$rustc"
		},
		{
			"label": "Build Server and Extension (Release)",
			"dependsOn": [
				"Build Server (Release)",
				"Build Extension (Release)"
			],
			"problemMatcher": "$rustc"
		},
		{
			"label": "Build Server and Extension (Debug)",
			"dependsOn": [
				"Build Server (Debug)",
				"Build Extension (Debug)"
			],
			"problemMatcher": "$rustc"
		},
	]
}