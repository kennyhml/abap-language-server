{
  "name": "abap",
  "displayName": "ABAP",
  "description": "ABAP Development in VSC",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension/index.js",
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "abap.openAddConnectionScreen",
        "title": "Add new System Connection"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "adt",
          "title": "ABAP Development Tools",
          "icon": "media/adt.png"
        },
        {
          "id": "transports",
          "title": "Transport Organizer",
          "icon": "media/transport.png"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "systems",
        "contents": "No connections yet.\n[Add New Connection](command:abap.openAddConnectionScreen)"
      }
    ],
    "views": {
      "adt": [
        {
          "id": "systems",
          "name": "System Connections",
          "icon": "media/adt.png",
          "type": "tree"
        },
        {
          "id": "test",
          "name": "Test",
          "icon": "media/adt.png",
          "type": "tree"
        }
      ],
      "transports": [
        {
          "id": "transports",
          "name": "Open Transports",
          "icon": "media/transport.png",
          "type": "tree"
        }
      ]
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "vscode:prepublish": "npm run compile",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.13",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "bits-ui": "^2.11.4",
    "svelte": "^5.0.3",
    "svelte-check": "^4.0.5",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tomjs/vite-plugin-vscode": "^5.0.0",
    "@tsconfig/svelte": "^5.0.4",
    "@types/node": "^24.5.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/vscode": "^1.93.0",
    "@types/vscode-webview": "^1.57.5",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "tailwindcss-animate": "^1.0.7"
  }
}